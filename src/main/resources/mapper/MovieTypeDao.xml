<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.imton.reptile.demo.dao.MovieTypeDao">

	<select id="queryObject" resultType="com.imton.reptile.demo.entity.MovieTypeEntity">
		select * from movie_type where id = #{id}
	</select>

	<select id="queryList" resultType="com.imton.reptile.demo.entity.MovieTypeEntity">
		select * from movie_type
	</select>
	 
	<insert id="save" parameterType="com.imton.reptile.demo.entity.MovieTypeEntity">
		insert into movie_type
		(
			`id`, 
			`type_name`, 
			`type_code`, 
			`source`, 
			`url`
		)
		values
		(
			#{id}, 
			#{typeName}, 
			#{typeCode}, 
			#{source}, 
			#{url}
		)
	</insert>
	 
	<update id="update" parameterType="com.imton.reptile.demo.entity.MovieTypeEntity">
		update movie_type 
		<set>
			<if test="typeName != null">`type_name` = #{typeName}, </if>
			<if test="typeCode != null">`type_code` = #{typeCode}, </if>
			<if test="source != null">`source` = #{source}, </if>
			<if test="url != null">`url` = #{url}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from movie_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from movie_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>